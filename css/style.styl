$base-font-size = 12px
$header-color = #FFFFFF
$base-color = #222222
$header-height = 70px
$left-margin-for-date = 50px
$date-number-color = #444444
$pin-size = 30px
$pin-size2 = 35px
$pin-color = #B20000


body
    font-family:  Mypiad Pro, Arial, Helvetica, sans-serif;
    font-size: $base-font-size;
    background-color: $header-color;
    font-weight: 200;

/* ****************** header **************************** */

header
    width: 100%;
    height: $header-height;
    background-color: $header-color;
    margin-top: 10px;

nav
    width: 400px;
    height: $header-height;
    margin: 0 auto;

    input
        position: absolute;
        top: -100px;

border-radius()
    -webkit-border-radius: arguments;
    -moz-border-radius: arguments;
    border-radius: arguments;

.roundStyle
    display: block;
    border: 1px solid $base-color;
    border-radius: 100px;
    text-align: center;
    cursor: pointer;
    
label
    width: $pin-size;
    height: $pin-size;
    float:left;
    margin: 10px 10px 0 10px;
    transition: all 1s ease;

    &:hover
        width: 40px;
        height: 40px;
        background-color: $pin-color;
        color: white;
        text-align: center;
        margin-right: 0px;
        border: 1px solid $pin-color;

    &:hover
        p
            margin: 15px 0 0 0;

    p
        margin: 10px 0 0 0;
        transition: all 1s ease;


span
    color: #999999;
    display: block;

.monthText
    width: $header-height;
    margin: 20px 0 0 $left-margin-for-date;
    font-size: 3.5em;
    float: left;

.roundBtnContainer
    float: right;
    margin: 10px 10px 0 10px;

        input
            background-color: white;
            width: $pin-size;
            height: $pin-size;

/* ****************** container **************************** */
.container
    width 100%;
    height: 1000px;
    background-color: $base-color;

.dateText
    float: left;
    margin-left: $left-margin-for-date;
    width: 150px;
    height: 150px;

.dateText span
    font-size: 8em;
    color: $date-number-color;
    margin: 0 auto;



