$color1 = #3D94F6;
$color2 = #1E62D0;


.noteWrapper
	width: 250px;
	height: 120px;
	background:  #FFFFFF;
	border: 1px solid #F6F6F6;
	border-radius: 3px;
	position: absolute; 
	left: 300px; 
	top: 150px;

::-webkit-scrollbar
	width: 12px;  /* for vertical scrollbars */
	height: 12px; /* for horizontal scrollbars */

::-webkit-scrollbar-track
	background: rgba(0, 0, 0, 0.1);

::-webkit-scrollbar-thumb
	background: rgba(0, 0, 0, 0.5);
  	
.textControl
	outline: none;
	border: none;

  
	

input.textControl{
	width: 219px;
  	margin-left: 10px;
  	background: #F6F6F6;
}

@-moz-document url-prefix() {
	input.textControl{
		width: 215px;
	}	
} 

.noteWrapper section{
  background: #F6F6F6;
}

.noteWrapper section + section{
  background: #fff;
}

  
textarea{
	font-family:  Mypiad Pro, Arial, Helvetica, sans-serif;
	resize: none;
	display: block;
 	width: 246px;
  	height: 80px;
}
	

.btn {
  outline: none;
  border: none;
  width: 15px;
  height: 15px;
  margin: 3px;
  line-height:100%;
  padding: 0;
  border-radius: 100px;
  background: rgba(0,0,0,0.1);
}

.btn:hover{
  background: #B20000;
  cursor: pointer;
  color:white;
}

.btn:active{
  background: #444;
  width: 15px;
  line-height:100%;
  height: 15px;
  cursor: pointer;
}



